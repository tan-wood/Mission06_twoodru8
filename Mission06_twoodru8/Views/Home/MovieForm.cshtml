@{
	ViewData["Title"] = "Movie Form";
}

@model Mission06_twoodru8.Models.MovieFormModel

@if (Model is not null)
{
	<h1>Thank you for submitting the form</h1>
}

<h1>Fill out your movie form</h1><br /><br />
<div class="row">
	<div class="col-2">
	<form method="post">
		<label class="form-label" asp-for="Category">Category:</label>
		<input class="form-control" asp-for="Category"/><br />	

		<label class="form-label" asp-for="Title">Title:</label>
		<input class="form-control" asp-for="Title" /><br />

		<label class="form-label" asp-for="Year">Year:</label>
		<input class="form-control" asp-for="Year" /><br />

		<label class="form-label" asp-for="Director">Director:</label>
		<input class="form-control" asp-for="Director" /><br />
		
		<label asp-for="Rating">Rating:</label>
		<select class="form-select" asp-for="Rating">
			<option value="G">G</option>
			<option value="PG">PG</option>
			<option value ="PG-13">PG-13</option>
			<option value="R">R</option>
		</select><br /><br />
		
		<label class ="form-label" asp-for="Edited">Edited:</label>
		<div class="form-check form-check-inline">
			<input class="form-check-input" type="radio" id="yes" name="edited" value="Y" asp-for="Edited" />
			<label class="form-check-label" for="yes">Yes</label>
		</div>

		<div class ="form-check form-check-inline">
			<input class="form-check-input" type="radio" id="no" name="edited" value="N" asp-for="Edited" />
			<label class="form-check-label" for="no">No</label>
		</div>
		<br /><br />

		<label class="form-label" asp-for="LentTo">Lent to:</label>
		<input class="form-control" asp-for="LentTo" /><br />
		
		<label class="form-label" asp-for="Notes">Notes:</label>
		<input class="form-control" asp-for="Notes" /><br />

		@*This will be where the errors are thrown from the model, if there are any*@
		<div asp-validation-summary="All" id="errors"></div>

		<button type="submit" class="btn btn-success">Submit</button>
	</form>
</div>
</div>